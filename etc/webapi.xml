<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/idenfy/needs-verification" method="POST">
        <service class="Idenfy\CustomerVerification\Model\Action\NeedsVerification" method="execute"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/idenfy/get-redirect-url" method="POST">
        <service class="Idenfy\CustomerVerification\Model\Action\GetRedirectUrl" method="execute"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/idenfy/process-verification" method="POST">
        <service class="Idenfy\CustomerVerification\Model\Action\ProcessVerification" method="execute"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
