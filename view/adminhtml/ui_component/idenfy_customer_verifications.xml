<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                idenfy_customer_verifications.idenfy_customer_verifications_data_source
            </item>
            <item name="deps" xsi:type="string">
                idenfy_customer_verifications.idenfy_customer_verifications_data_source
            </item>
        </item>
    </argument>
    <settings>
        <spinner>idenfy_customer_verifications_columns</spinner>
        <deps>
            <dep>idenfy_customer_verifications.idenfy_customer_verifications_data_source</dep>
        </deps>
    </settings>
    <dataSource name="idenfy_customer_verifications_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">entity_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Idenfy_CustomerVerification::listing</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="idenfy_customer_verifications_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="idenfy_customer_verifications_columns">
        <column name="entity_id" sortOrder="10">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="customer_id" sortOrder="20">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Customer ID</label>
            </settings>
        </column>
        <column name="scan_reference" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Scan Reference</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="is_verified" component="Magento_Ui/js/grid/columns/select" sortOrder="40">
            <settings>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
                <filter>select</filter>
                <dataType>select</dataType>
                <label translate="true">Is Verified</label>
            </settings>
        </column>
        <column name="auth_token" sortOrder="50">
            <settings>
                <filter>text</filter>
                <label translate="true">Auth Token</label>
            </settings>
        </column>
        <column name="client_id" sortOrder="60">
            <settings>
                <filter>text</filter>
                <label translate="true">Client ID</label>
            </settings>
        </column>
        <column name="digit_string" sortOrder="70">
            <settings>
                <filter>text</filter>
                <label translate="true">Digit String</label>
            </settings>
        </column>
        <column name="message" sortOrder="80">
            <settings>
                <filter>text</filter>
                <label translate="true">Response</label>
            </settings>
        </column>
    </columns>
</listing>
